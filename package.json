{
  "name": "rick-and-morty-app",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "yarn check-env && expo start",
    "android": "yarn check-env && expo start --android",
    "ios": "yarn check-env && expo start --ios",
    "web": "yarn check-env && expo start --web",
    "clean": "rm -rf node_modules && rm -rf package-lock.json && rm -rf yarn.lock && rm -rf .expo",
    "format": "biome format --write",
    "lint": "biome check --fix --unsafe",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:dev": "jest --watch",
    "prepare": "husky install",
    "prepare-hooks": "node scripts/prepare-hooks.mjs",
    "check-env": "node --env-file=.env scripts/check-env.mjs"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-navigation/bottom-tabs": "^7.3.14",
    "@react-navigation/native": "^7.1.10",
    "@react-navigation/native-stack": "^7.3.14",
    "@shopify/flash-list": "1.7.6",
    "@tanstack/react-query": "^5.80.7",
    "axios": "^1.9.0",
    "expo": "~53.0.11",
    "expo-status-bar": "~2.2.3",
    "react": "19.0.0",
    "react-native": "0.79.3",
    "react-native-safe-area-context": "^5.4.1",
    "react-native-screens": "^4.11.1",
    "zod": "^3.25.67",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@testing-library/react-native": "^13.2.0",
    "@types/jest": "^30.0.0",
    "@types/react": "~19.0.10",
    "husky": "^9.1.7",
    "jest": "~29.7.0",
    "jest-expo": "~53.0.7",
    "typescript": "~5.8.3"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFiles": ["<rootDir>/jest.setup.js"]
  },
  "private": true
}
